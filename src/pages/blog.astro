---
import Layout from '../layouts/Layout.astro';
import { client, queries, urlFor, type BlogPost } from '../lib/sanity';

// Fetch all blog posts from CMS
const allPosts: BlogPost[] = await client.fetch(`
  *[_type == "blogPost"] | order(publishedAt desc){
    _id,
    title,
    slug,
    excerpt,
    featuredImage,
    publishedAt,
    author,
    categories,
    featured
  }
`);

// Separate featured and regular posts
const featuredPosts = allPosts.filter(post => post.featured);
const regularPosts = allPosts.filter(post => !post.featured);

// Helper function to format dates
const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Helper function to format category names
const formatCategory = (category: string) => {
  return category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase());
};
---

<Layout title="Blog - Great Catholic Book Club">
  <!-- Header Section -->
  <section class="bg-black-olive relative">
    <!-- Background image with candlelit ancient desk -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/images/SiteImages/A candle lit ancient desk stacked with books and catholic relics including a statue of Mary.jpg');"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-black-olive/80 via-black-olive/90 to-black-olive/95"></div>
    <div class="max-w-7xl mx-auto px-4 py-16 relative z-10">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-champaign-100 mb-8 font-headline drop-shadow-lg">
          GCBC Blog
        </h1>
        <p class="text-xl text-champaign-200">
          Thoughts on faith, literature, and the Catholic intellectual tradition
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Posts Section -->
  {featuredPosts.length > 0 && (
    <section class="py-16 bg-black-olive">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-champaign-100 mb-12 font-headline text-center">Featured Posts</h2>
        <div class="grid gap-8">
          {featuredPosts.map((post) => (
            <article class="bg-black-olive border border-champaign-700/30 rounded-lg p-8 shadow-2xl">
              <div class="grid md:grid-cols-3 gap-8 items-center">
                <div class="aspect-video rounded-lg overflow-hidden shadow-inner">
                  {post.featuredImage ? (
                    <img
                      src={urlFor(post.featuredImage).width(400).height(225).url()}
                      alt={post.title}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <div class="w-full h-full bg-black-olive border border-champaign-700/20 flex items-center justify-center">
                      <span class="text-champaign-300">No Image</span>
                    </div>
                  )}
                </div>
                <div class="md:col-span-2">
                  <h3 class="text-2xl font-bold text-champaign-100 mb-4 font-headline">{post.title}</h3>
                  <p class="text-champaign-200 mb-4 leading-relaxed">
                    {post.excerpt}
                  </p>
                  <div class="flex items-center text-sm text-champaign-300 mb-4">
                    <span>By {post.author || 'Great Catholic Book Club'}</span>
                    <span class="mx-2">•</span>
                    <time datetime={post.publishedAt}>{formatDate(post.publishedAt)}</time>
                  </div>
                  {post.categories && post.categories.length > 0 && (
                    <div class="flex gap-2 mb-4 flex-wrap">
                      {post.categories.map((category) => (
                        <span class="bg-rust-800 text-champaign-100 px-3 py-1 rounded-full text-xs">
                          {formatCategory(category)}
                        </span>
                      ))}
                    </div>
                  )}
                  <a href={`/blog/${post.slug.current}`} class="inline-block bg-rust-800 text-champaign-100 px-6 py-3 rounded-lg hover:bg-rust-900 transition-colors shadow-md">
                    Read Article
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Blog Posts Section -->
  <section class="py-16 bg-black-olive">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-champaign-100 mb-12 font-headline text-center">
        {featuredPosts.length > 0 ? 'All Posts' : 'Latest Posts'}
      </h2>

      {allPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {(featuredPosts.length > 0 ? regularPosts : allPosts).map((post) => (
            <article class="bg-black-olive border border-champaign-700/30 rounded-lg overflow-hidden shadow-xl hover:shadow-2xl transition-shadow">
              {post.featuredImage && (
                <div class="aspect-video overflow-hidden">
                  <img
                    src={urlFor(post.featuredImage).width(400).height(225).url()}
                    alt={post.title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  />
                </div>
              )}
              <div class="p-6">
                <h3 class="text-xl font-bold text-champaign-100 mb-2 font-headline line-clamp-2">
                  {post.title}
                </h3>
                <p class="text-champaign-300 text-sm mb-3">
                  {formatDate(post.publishedAt)} • By {post.author || 'Great Catholic Book Club'}
                </p>
                <p class="text-champaign-200 text-sm mb-4 line-clamp-3 leading-relaxed">
                  {post.excerpt}
                </p>
                {post.categories && post.categories.length > 0 && (
                  <div class="flex gap-1 mb-4 flex-wrap">
                    {post.categories.slice(0, 2).map((category) => (
                      <span class="bg-rust-800/50 text-champaign-200 px-2 py-1 rounded text-xs">
                        {formatCategory(category)}
                      </span>
                    ))}
                    {post.categories.length > 2 && (
                      <span class="text-champaign-300 text-xs px-2 py-1">
                        +{post.categories.length - 2} more
                      </span>
                    )}
                  </div>
                )}
                <a
                  href={`/blog/${post.slug.current}`}
                  class="inline-block text-rust-400 hover:text-rust-300 font-semibold text-sm transition-colors"
                >
                  Read More →
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <div class="bg-black-olive border border-champaign-700/30 rounded-lg p-8 shadow-xl max-w-md mx-auto">
            <h3 class="text-xl font-bold text-champaign-100 mb-4">No Posts Yet</h3>
            <p class="text-champaign-200 mb-6">
              We're working on creating great content for you. Check back soon!
            </p>
            <a href="/" class="inline-block bg-rust-800 text-champaign-100 px-6 py-3 rounded-lg hover:bg-rust-900 transition-colors">
              Back to Home
            </a>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-rust-800">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-champaign-100 mb-4 font-headline">Join the Conversation</h2>
      <p class="text-champaign-200 mb-8 text-lg">
        Ready to explore literature through the Catholic lens? Join our book club community!
      </p>
      <div class="flex justify-center gap-4 flex-wrap">
        <a href="/books" class="inline-block bg-champaign-100 text-rust-800 px-8 py-3 rounded-lg text-lg font-semibold hover:bg-champaign-200 transition-colors shadow-md">
          View Reading List
        </a>
        <a href="/join" class="inline-block bg-rust-600 text-champaign-100 px-8 py-3 rounded-lg text-lg font-semibold hover:bg-rust-700 transition-colors shadow-md">
          Join Book Club
        </a>
      </div>
    </div>
  </section>
</Layout>