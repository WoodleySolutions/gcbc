---
export interface Props {
  book: {
    _id: string;
    title: string;
    author: string;
    description?: string;
    coverImage?: any;
    slug?: { current: string };
    rating?: number;
    currentlyReading?: boolean;
  };
}

const { book } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  {book.coverImage && (
    <div class="aspect-[3/4] bg-gray-200">
      <img 
        src={`https://cdn.sanity.io/images/YOUR_PROJECT_ID/production/${book.coverImage.asset._ref.replace('image-', '').replace('-jpg', '.jpg').replace('-png', '.png')}`}
        alt={`Cover of ${book.title}`}
        class="w-full h-full object-cover"
      />
    </div>
  )}
  
  <div class="p-4">
    {book.currentlyReading && (
      <span class="inline-block bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full mb-2">
        Currently Reading
      </span>
    )}
    
    <h3 class="text-lg font-semibold text-gray-900 mb-1">
      {book.slug ? (
        <a href={`/books/${book.slug.current}`} class="hover:text-red-800">
          {book.title}
        </a>
      ) : (
        book.title
      )}
    </h3>
    
    <p class="text-gray-600 text-sm mb-2">by {book.author}</p>
    
    {book.rating && (
      <div class="flex items-center mb-2">
        {Array.from({ length: 5 }, (_, i) => (
          <svg 
            key={i}
            class={`w-4 h-4 ${i < book.rating ? 'text-yellow-400' : 'text-gray-300'}`}
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
        <span class="ml-2 text-sm text-gray-500">({book.rating}/5)</span>
      </div>
    )}
    
    {book.description && (
      <p class="text-gray-600 text-sm line-clamp-3">
        {book.description}
      </p>
    )}
    
    {book.slug && (
      <div class="mt-4">
        <a 
          href={`/books/${book.slug.current}`}
          class="inline-block bg-red-800 text-white px-4 py-2 rounded-md text-sm hover:bg-red-900 transition-colors"
        >
          Learn More
        </a>
      </div>
    )}
  </div>
</div>