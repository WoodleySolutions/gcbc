---
export interface Props {
  title: string;
  description?: string;
  image?: string;
  keywords?: string;
  author?: string;
  publishedTime?: string;
  structuredData?: object;
}

const {
  title,
  description = "Great Catholic Book Club - Every Book is Catholic",
  image = "/GCBC.png",
  keywords,
  author = "Tyler & Sadie Woodley",
  publishedTime,
  structuredData
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/png" href="/GCBC.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8J30EH3QNP"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-8J30EH3QNP');
    </script>

    <style>
      .logo-responsive {
        margin-bottom: -16px; /* Mobile default */
      }
      @media (min-width: 768px) {
        .logo-responsive {
          margin-bottom: -24px; /* Desktop */
        }
      }

      /* Skip to main content link - hidden until focused */
      .skip-link {
        position: absolute;
        top: -40px;
        left: 0;
        background: #8B4513;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        z-index: 100;
        border-radius: 0 0 4px 0;
      }
      .skip-link:focus {
        top: 0;
      }

      /* Improved focus visibility for accessibility */
      a:focus-visible, button:focus-visible {
        outline: 2px solid #D4A574;
        outline-offset: 2px;
        border-radius: 2px;
      }
    </style>
    <title>{title}</title>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', function() {
            const isExpanded = mobileMenu.classList.contains('hidden');
            mobileMenu.classList.toggle('hidden');
            mobileMenuButton.setAttribute('aria-expanded', isExpanded);
          });

          // Close menu when clicking outside
          mobileMenu.addEventListener('click', function(e) {
            if (e.target === mobileMenu || e.target.classList.contains('bg-black-olive/95')) {
              mobileMenu.classList.add('hidden');
            }
          });

          // Close menu when clicking on a link
          const menuLinks = mobileMenu.querySelectorAll('a');
          menuLinks.forEach(link => {
            link.addEventListener('click', function() {
              mobileMenu.classList.add('hidden');
            });
          });
        }
      });
    </script>
  </head>
  <body class="bg-black-olive text-champaign-100">
    <!-- Skip to main content link for keyboard navigation -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <nav class="bg-black-olive border-b border-champaign-700/30 sticky top-0 z-50 shadow-lg overflow-visible" role="navigation" aria-label="Main navigation">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center relative">
            <!-- Desktop flag background behind logo -->
            <div class="absolute bg-black-olive border border-champaign-700/30 rounded-b-lg shadow-lg hidden md:block"
                 style="width: 125px; height: 190px; z-index: 5; top: -40px; left: 0px;"></div>
            <!-- Mobile flag (20% smaller) -->
            <div class="absolute bg-black-olive border border-champaign-700/30 rounded-b-lg shadow-lg block md:hidden"
                 style="width: 95px; height: 152px; z-index: 5; top: -32px; left: 0px;"></div>

            <a href="/" class="flex items-center space-x-4 hover:opacity-90 transition-opacity relative z-10">
              <img src="/GCBC_Logo_ForDarkBG.png" alt="Great Catholic Book Club" class="md:h-32 h-24 w-auto relative z-20 logo-responsive" style="margin-top: 48px;" />
              <span class="text-xl font-bold text-champaign-100 font-headline">
                <span class="whitespace-nowrap">Great Catholic</span>
                <span class="whitespace-nowrap">Book Club</span>
              </span>
            </a>
          </div>
          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/" class="text-champaign-200 hover:text-champaign-100 font-medium transition-colors">Home</a>
            <a href="/books" class="text-champaign-200 hover:text-champaign-100 font-medium transition-colors">Book List</a>
            <a href="/blog" class="text-champaign-200 hover:text-champaign-100 font-medium transition-colors">Blog</a>
            <a href="/shop" class="text-champaign-200 hover:text-champaign-100 font-medium transition-colors">Shop</a>
            <a href="/about" class="text-champaign-200 hover:text-champaign-100 font-medium transition-colors">About</a>
            <a href="/contact" class="text-champaign-200 hover:text-champaign-100 font-medium transition-colors">Contact</a>
            <a href="/join" class="bg-rust-800 text-champaign-100 px-4 py-2 rounded-md hover:bg-rust-900 transition-colors shadow-md">
              Join
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <div class="md:hidden flex items-center">
            <button
              id="mobile-menu-button"
              class="text-champaign-200 hover:text-champaign-100 focus:outline-none focus:text-champaign-100 transition-colors"
              aria-label="Open navigation menu"
              aria-expanded="false"
              aria-controls="mobile-menu"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu Overlay -->
      <div id="mobile-menu" class="md:hidden fixed inset-0 z-40 hidden">
        <div class="fixed inset-0 bg-black-olive/95 backdrop-blur-sm"></div>
        <div class="relative bg-black-olive border-t border-champaign-700/30 shadow-lg">
          <div class="px-4 py-6 space-y-4 text-center">
            <a href="/" class="block text-lg text-champaign-200 hover:text-champaign-100 font-medium transition-colors py-2">Home</a>
            <a href="/books" class="block text-lg text-champaign-200 hover:text-champaign-100 font-medium transition-colors py-2">Book List</a>
            <a href="/blog" class="block text-lg text-champaign-200 hover:text-champaign-100 font-medium transition-colors py-2">Blog</a>
            <a href="/shop" class="block text-lg text-champaign-200 hover:text-champaign-100 font-medium transition-colors py-2">Shop</a>
            <a href="/about" class="block text-lg text-champaign-200 hover:text-champaign-100 font-medium transition-colors py-2">About</a>
            <a href="/contact" class="block text-lg text-champaign-200 hover:text-champaign-100 font-medium transition-colors py-2">Contact</a>
            <a href="/join" class="block bg-rust-800 text-champaign-100 px-6 py-3 rounded-md hover:bg-rust-900 transition-colors shadow-md text-center font-semibold mt-4">
              Join the Book Club
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main id="main-content">
      <slot />
    </main>

    <footer class="bg-black-olive border-t border-champaign-700/30">
      <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4 font-headline text-champaign-100">Great Catholic Book Club</h3>
            <p class="text-champaign-200 mb-4 font-headline">
              "Every Book is Catholic"
            </p>
            <p class="text-champaign-300 text-sm italic">
              Pope St. John Paul II and Mother Teresa of Calcutta pray for us!
            </p>
          </div>
          <div>
            <h4 class="font-semibold mb-4 font-headline text-champaign-100">Reading</h4>
            <ul class="space-y-2 text-champaign-200">
              <li><a href="/books" class="hover:text-champaign-100 transition-colors">Book Lists</a></li>
              <li><a href="/blog" class="hover:text-champaign-100 transition-colors">Blog</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4 font-headline text-champaign-100">Community</h4>
            <ul class="space-y-2 text-champaign-200">
              <li><a href="/join" class="hover:text-champaign-100 transition-colors">Join the Club</a></li>
              <li><a href="/shop" class="hover:text-champaign-100 transition-colors">Shop</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4 font-headline text-champaign-100">Connect</h4>
            <ul class="space-y-2 text-champaign-200">
              <li><a href="/about" class="hover:text-champaign-100 transition-colors">About Tyler & Sadie</a></li>
              <li><a href="/contact" class="hover:text-champaign-100 transition-colors">Contact Us</a></li>
              <li><a href="https://www.youtube.com/channel/UC_jzu6tat1-sEKJreOs6yOg" target="_blank" rel="noopener noreferrer" class="hover:text-champaign-100 transition-colors">YouTube Channel</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-champaign-700/30 mt-8 pt-8 text-center text-champaign-200">
          <p>&copy; 2025 Great Catholic Book Club. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>